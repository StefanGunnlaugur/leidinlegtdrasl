extends layout

block content

  .info
    .villur
      #{villur}
    form(action='/post', method='post')
      .row
        .col-25
          label(class= "texti") Nafn:
        .col-75
          input(class="kassi" type="text" name="name" value="")
      .row
        .col-25
          label(class= "texti") Netfang:
        .col-75
          input(class="kassi" type="email" name="email" value="")
      .row
        .col-25
          label(class= "texti") Kennitala:
        .col-75
          input(class="kassi" type="text" pattern="^[0-9]{6}-?[0-9]{4}$" name="ssn" value="")
      .row
        .col-25
          label(class= "texti") Fjöldi:
        .col-75
          input(class="kassi" type="number" min="0" step="1" name="fjoldi" value="")
      .row
        .col-25
          button(class="takki") Senda

  .control
    a(href="/login") Innskráning
